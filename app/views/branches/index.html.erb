<div class="container mt-4" data-controller="branches">
  <% if notice.present? %>
    <p class="alert alert-success"style="color: green"><%= notice %></p>
  <% end %>
  <div class="d-none" data-branches-target="form_branches">
    <%= render "form", branch: @branch %>
    <br>
  </div>
  <div class="row p-3">
    <div class="shadow border border-muted d-flex justify-content-end rounded-pill col-md-4">
      <form id="search_form" class="col-md-8" action="/branches">
        <input class="form-control border-0 shadow-none" type="search" name="q" placeholder="Search Branch" aria-label="Search">
      </form>
      <div class="col-md-4 d-flex justify-content-end">
        <button form="search_form" class="btn btn-white shadow-none border-0 " type="submit"> <i class="bi bi-search"></i></button>
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <button class="btn btn-blue col-md-2 bi bi-plus shadow rounded-pill" data-branches-target="button_new" data-action="click->branches#showForm">New Branch</button>
    </div>
  </div>
  <table class="table table-hover text-center shadow p-3 mb-5 rounded mt-5" style="border-color:white;">
    <thead class="border" style="border-color:white;">
      <tr>
        <th scope="col"># Branch</th>
        <th scope="col">Branch name</th>
        <th scope="col">Address</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @branches.each_with_index do |branch, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= branch.name %></td>
          <td><%= branch.address %></td>
          <td><%= link_to "Details", branch, class: 'btn btn-green rounded-pill' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
