<%= form_for filter_path, method: :get, remote: true, class: 'filter' do %>
  <div class="form-group w-75">
    <label>Filter by day</label>
    <%= date_field_tag :day, class:"form-date"%>
  </div>
  <div class="form-group w-75 my-4">
    <label>Filter by role</label>
    <%= select_tag :role_id, options_from_collection_for_select(get_role, "id", "description"), prompt: "Select a role", class:"form-select"%>
  </div>
  <div class="form-group w-75">
    <label>Filter by name</label>
    <%= text_field_tag :name%>
  </div>
  <%= submit_tag 'Search', :name => nil, class:"btn btn-primary btn-lg mt-4 w-50" %>
<% end %>
