<h1>Employees' List</h1>
<div class="container">
  <div class="row m-5">
    <div class="input-group col w-25 me-5">
      <input type="text" class="input-text form-control col-3 box" placeholder="  Search Employee"/>
      <div class="input-group-append">
        <button class="btn btn-light">Search</button>
      </div>
    </div>
    <%= link_to '+ Add employee', new_employee_path, class:"btn btn-primary col-2 box ms-5"%>
  </div>
  <table class="table table-light table-hover box">
    <thead>
      <tr>
        <th class="text-end">#</th>
        <th>Name</th>
        <th class="text-center">Branch</th>
        <th class="text-center">Position</th>
        <th class="text-center">E-mail</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%@employees.each do |employee|%>
        <%= content_tag :tr, :style => (employee.status ? "" : "color:gray") do%>
          <th class="text-end"><%=employee.id%></th>
          <td><%=employee.name%></td>
          <td class="text-center"><%=employee.branch.name%></td>
          <td class="text-center"><%=employee.role.description%></td>
          <td class="text-center"><%=employee.email%></td>
          <td class="text-center">
            <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-primary box" %>
            <%= link_to 'Delete', employee_path(employee),  class: "btn btn-danger box" %>
          </td>
        <%end%>
      <%end%>
    </tbody>
  </table>
</div>
