<div id="<%= dom_id @role%>">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <%= form_with(model: @role, local: true, class: 'form col-4 d-flex
      justify-content-center flex-wrap') do |form|%>
      <div class="form-group">
        <%= form.label :description, "Description:", class:"form-label" %> <%=
        form.text_field :description, class:"form-control box", placeholder:"Ex:
        Assistant" %>
      </div>
      <div
        class="form-group form-group-buttons row flex-row align-items-end justify-content-between"
      >
        <%= form.submit "+ Add Employeee", class:"btn btn btn-primary col-6
        my-4" %>
      </div>
      <%end%>
    </div>
    <div class="col-12 d-flex justify-content-center">
      <%= link_to "Cancel", roles_path, class:"btn btn-danger col-2 m-4" %>
    </div>
  </div>
</div>
